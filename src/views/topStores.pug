extends layout

block content
  .inner
    h2
      Top #{stores.length} Stores
    table.table
      thead
        td photo
        td ranking
        td name
        td reviews
        td average reviews
      each store, i in stores
        tr
          td
            a(href=h.url.store(store))
              img(width=200 src=h.url.img(store) alt=store.name)
          td= i+1
          td: a(href=h.url.store(store)) #{store.name}
          td= store.reviews.length
          td #{Math.round(store.averageRating * 10) / 10} / 5